{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Quest`tools",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://sj.qq.com/*"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      },
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "run-adb",
            "cmd": "adb",
            "args": [{ "validator": "\\S+" }, { "validator": "\\S+" }]
          }
        ]
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/vr.png",
        "icons/icon.ico"
      ],
      "identifier": "adbcom.build",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 700,
        "resizable": false,
        "title": "",
        "skipTaskbar": false,
        "transparent": true,
        "hiddenTitle": true,
        "x": 0,
        "titleBarStyle": "Overlay",
        "y": 0,
        "center": true,
        "width": 1000
      }
    ],
    "macOSPrivateApi": true
  }
}
